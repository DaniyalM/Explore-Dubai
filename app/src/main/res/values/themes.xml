<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MyApp" parent="Base.Theme.MyApp">
            <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:spotShadowAlpha">0.3</item>

    </style>
    <style name="MyRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/radio_btn_selector</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    <style name="Base.Theme.MyApp" parent="Base.Theme.MaterialThemeBuilder">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_600</item>
        <item name="colorPrimaryVariant">@color/purple_900</item>
        <item name="colorOnPrimary">@color/white_900</item>
        <!-- Secondary brand color. Title -->
        <item name="colorSecondary">@color/black_200</item>
        <item name="colorSecondaryVariant">@color/gray_800</item>
        <item name="colorOnSecondary">@color/white_900</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white_900</item>
        <!-- Customize your theme here. -->

        <item name="colorSurface">@color/white_900</item>
        <item name="colorOnSurface">@color/black_800</item>
        <!--for error-->
        <item name="colorOnError">@color/red_200</item>
        <item name="colorError">@color/red_600</item>
        <!--bg-->
        <item name="android:colorBackground">@color/white_900</item>
        <item name="colorOnBackground">@color/white_900</item>
        <item name="android:navigationBarColor">@color/white_900</item>
        <item name="color_dubai_logo">@color/purple_650</item>
        <item name="color_light_gray_svg">@color/black_200</item>
        <item name="color_light_white_dark_gray">@color/white_900</item>
        <item name="color_edit_text_bg">@color/edit_text_white_shade_bg</item>
        <item name="color_card_views_shadow">@color/gray_600</item>




    </style>

    <style name="Base.Theme.MaterialThemeBuilder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:ignore="NewApi">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
<!--        <item name="android:navigationBarColor" tools:ignore="NewApi">?android:attr/colorBackground</item>-->
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">?attr/colorControlHighlight</item>
    </style>




    <style name="Theme.MyApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.MyApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.MyApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--This will change all the BottomSheetDialogs of your app.-->
    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
<!--        <item name="android:windowFullscreen">true</item>-->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>
    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

    <style name="CustomDialogStyle" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>
    <!--OTP-->
    <style name="OtpStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>
    <style name="my_dialog_theme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/purple_900</item>                   <!--header background-->
        <item name="android:windowBackground">@color/white_900</item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/purple_900</item> <!--selected day-->
<!--        <item name="android:textColorPrimary">@color/colorPrimaryText</item> &lt;!&ndash;days of the month&ndash;&gt;-->
        <item name="android:textColorSecondary">@color/purple_900</item>    <!--days of the week-->
    </style>
    <style name="spinner_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_edit_resiger</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">@color/gray_600</item>
    </style>

<!--    app:track="@drawable/switch_track_circle_shape"-->

    <style name="SwitchStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:thumb">@drawable/switch_thumb_circle_shape</item>

    </style>
</resources>