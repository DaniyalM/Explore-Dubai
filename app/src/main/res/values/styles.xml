<?xml version="1.0" encoding="UTF-8" ?>

<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--    <item name="colorPrimary">@color/colorPrimary</item>-->
        <!--    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--    <item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/LoginLayoutSuccessColor</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>


    <style name="textTheme" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#00FF00</item>
        <item name="android:textSize">22dp</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--HOME-->
    <style name="HomeTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="HomeTabStyle" parent="TextAppearance.Design.Tab">
        <item name="tabIndicatorColor">@color/tabTextColorSelected</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabIconTint">@color/home_tab_icon_tint_selector</item>
        <item name="tabSelectedTextColor">@color/tabTextColorSelected</item>
        <item name="tabTextAppearance">@style/HomeTabTextStyle</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabTextColor">@color/tabTextColorUnSelected</item>
    </style>


    <style name="ButtonStyle">
        <item name="android:background">@drawable/ic_login_next_selector</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


</resources>
