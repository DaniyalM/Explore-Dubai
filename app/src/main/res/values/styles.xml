<?xml version="1.0" encoding="UTF-8" ?>

<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowActivityTransitions">true</item>

        <!-- Customize your theme here. -->
        <!--    <item name="colorPrimary">@color/colorPrimary</item>-->
        <!--    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--    <item name="colorAccent">@color/colorAccent</item>-->


    </style>

    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="tabIconTint">@color/home_tab_icon_tint_selector</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="TabTextStyleAttraction" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="tabIconTint">@color/home_tab_icon_tint_selector</item>
        <item name="textAllCaps">true</item>
        <item name="background">?attr/colorSurface</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="TabTextStyleSearch" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="tabIconTint">@color/home_tab_icon_tint_selector</item>
        <item name="textAllCaps">true</item>
        <item name="background">?attr/colorSurface</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="ServiceTabStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/purple_900</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabIndicatorHeight">@dimen/_3sdp</item>
        <item name="tabBackground">@drawable/tab_layout_selector</item>
        <item name="tabTextAppearance">@style/TabTextStyle</item>
        <item name="tabTextColor">?attr/colorSecondary</item>
        <item name="tabSelectedTextColor">@color/purple_650</item>

    </style>


    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">?attr/colorSecondary</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="colorControlNormal">@color/purple_900</item>
        <item name="colorControlActivated">@color/purple_900</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>

    </style>


    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/LoginLayoutSuccessColor</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>
    <!--    searchViewStyle Calling-->
    <style name="SearchViewComponentStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/SearchViewComponentCustomCorners</item>
    </style>

    <style name="SearchViewComponentCustomCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
    </style>

    <style name="SearchViewStyle">
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:background">@drawable/bg_search</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="android:queryBackground">@android:color/transparent</item>
        <item name="android:queryHint">@string/search</item>
    </style>
    <!--    searchViewStyle Calling-->


    <style name="textTheme" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">#00FF00</item>
        <item name="android:textSize">22dp</item>

    </style>


    <!--HOME-->
    <style name="HomeTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:font">@font/neo_sans_arabic_regular</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="HomeTabStyle" parent="TextAppearance.Design.Tab">
        <item name="tabIndicatorColor">@color/purple_600</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabIconTint">@color/home_tab_icon_tint_selector</item>
        <item name="tabSelectedTextColor">@color/purple_600</item>
        <item name="tabTextAppearance">@style/HomeTabTextStyle</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabTextColor">@color/tabTextColorUnSelected</item>

    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/ic_login_next_selector</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CustomTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/purple_900</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>
    <!--Widget Styles-->
    <style name="AppWidgetSection" parent="@android:style/Widget">
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:background">&#64;android:color/white</item>
    </style>

    <style name="AppWidgetLabel" parent="AppWidgetText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppWidgetText" parent="Base.TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">&#64;android:color/black</item>
    </style>
