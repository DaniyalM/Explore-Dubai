<?xml version="1.0" encoding="UTF-8" ?>

<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowActivityTransitions">true</item>

        <!-- Customize your theme here. -->
        <!--    <item name="colorPrimary">@color/colorPrimary</item>-->
        <!--    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--    <item name="colorAccent">@color/colorAccent</item>-->


    </style>



    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>

    </style>


    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/LoginLayoutSuccessColor</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>
    <!--    searchViewStyle Calling-->
    <style name="SearchViewComponentStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/SearchViewComponentCustomCorners</item>
    </style>

    <style name="SearchViewComponentCustomCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
    </style>

    <style name="SearchViewStyle">
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:background">@drawable/bg_search</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="android:queryBackground">@android:color/transparent</item>
        <item name="android:queryHint">@string/search</item>
    </style>
    <!--    searchViewStyle Calling-->


    <style name="textTheme" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">#00FF00</item>
        <item name="android:textSize">22dp</item>

    </style>


    <!--HOME-->
    <style name="HomeTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:font">@font/neo_sans_arabic_regular</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="HomeTabStyle" parent="TextAppearance.Design.Tab">
        <item name="tabIndicatorColor">@color/purple_600</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabIconTint">@color/home_tab_icon_tint_selector</item>
        <item name="tabSelectedTextColor">@color/purple_600</item>
        <item name="tabTextAppearance">@style/HomeTabTextStyle</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabTextColor">@color/tabTextColorUnSelected</item>

    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/ic_login_next_selector</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!--Widget Styles-->
    <style name="AppWidgetSection" parent="@android:style/Widget">
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:background">&#64;android:color/white</item>
    </style>

    <style name="AppWidgetLabel" parent="AppWidgetText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppWidgetText" parent="Base.TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">&#64;android:color/black</item>
    </style>
    <!--Widget Styles-->


    <string name="search">Search</string>


    <style name="EditTextStyle">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_25sdp</item>
        <item name="android:layout_marginStart">@dimen/_25sdp</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:paddingEnd">@dimen/_15sdp</item>
        <item name="android:textColor">@color/black_200</item>
        <item name="android:textColorHint">@color/gray_600</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:background">@drawable/bg_edit_resiger</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="TextViewRegistrationStyle">
        <item name="android:layout_marginTop">@dimen/_15sdp</item>
        <item name="android:textColor">@color/black_200</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="TextViewErrorRegistration">
        <item name="android:layout_marginEnd">@dimen/_5sdp</item>
        <item name="android:textColor">@color/red_600</item>
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="EditTextLoginStyle">
        <item name="android:layout_marginBottom">@dimen/_12sdp</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:paddingEnd">@dimen/_15sdp</item>
        <item name="android:textColor">@color/white_900</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColorHint">#E3E0E0</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:background">@drawable/bg_edit_login</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewCreatePasswordStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray_800</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <!--        <item name="android:textStyle">bold</item>-->
        <!--        <item name="android:layout_marginTop">@dimen/_15sdp</item>-->
    </style>


    <style name="MyFabStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/purple_900</item>
        <item name="rippleColor">@color/gray_800</item>
    </style>

    <style name="RoundedShape" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSizeBottomLeft">35dp</item>
        <item name="cornerSizeTopRight">35dp</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
    </style>

    <style name="RoundedShapePlanYourTrip" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSizeTopLeft">35dp</item>
        <item name="cornerSizeBottomRight">35dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
    </style>

    <style name="RoundedShapePlanYourTripAr" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerSizeTopRight">35dp</item>
        <item name="cornerSizeBottomLeft">35dp</item>
    </style>
    <!--    android:layout_marginEnd="@dimen/_12sdp"-->
    <!--    android:layout_width="wrap_content"-->
    <!--    android:layout_height="wrap_content"-->

    <!--    Horizontal recycler style-->
    <style name="HorizontalItemStyle">
        <item name="selectedBackground">@drawable/bg_filled</item>
        <item name="selectedTextColor">@android:color/white</item>
        <item name="unSelectedBackground">@drawable/bg_bordered</item>
        <item name="unSelectedTextColor">@android:color/black</item>
    </style>

    <style name="HorizontalAttractionStyle">
        <item name="selectedBackground1">@color/purple_900</item>
        <item name="selectedTextColor1">@color/white_900</item>
        <item name="unSelectedBackground1">@color/white_900</item>
        <item name="unSelectedTextColor1">@color/gray_700</item>
    </style>

    <style name="SubmitButtonFilled">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_btn_filled</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="cb_textFont">bold</item>
        <item name="cb_type">filled</item>
    </style>
    <style name="SubmitButtonOutLined" parent="SubmitButtonFilled">
        <item name="android:background">@drawable/bg_btn_outlined</item>
        <item name="android:textColor">@color/purple_900</item>
        <item name="cb_type">outlined</item>
    </style>
</resources>
