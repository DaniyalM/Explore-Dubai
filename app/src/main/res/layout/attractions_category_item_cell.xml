<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
<!--        <variable name="attractions" type="com.app.dubaiculture.data.repository.explore.local.models.BaseModel"/>-->
        <variable name="attractionsCat" type="com.app.dubaiculture.data.repository.attraction.local.models.AttractionCategory"/>
    </data>

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="@dimen/_73sdp"
        android:layout_height="wrap_content"
        app:layoutDescription="@xml/attractions_category_item_cell_xml_constraintlayout2_scene">


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/attraction_image"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginTop="12dp"
            android:background="@android:drawable/dialog_holo_light_frame"
            app:cardBackgroundColor="@color/purple_900"
            app:cardElevation="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <!--            app:shapeAppearance="@style/RoundedShape"-->
            <ImageView
                android:id="@+id/img_card_view"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:imageViewUrl="@{attractionsCat.selectedSvg}" />
        </com.google.android.material.card.MaterialCardView>


        <com.app.dubaiculture.ui.components.customtextview.CustomTextView
            android:id="@+id/attraction_title_text"
            android:layout_width="@dimen/_65sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@{attractionsCat.title}"
            android:textAlignment="center"
            android:textColor="@color/black_900"
            android:textSize="@dimen/_9ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/attraction_image"
            app:layout_constraintStart_toStartOf="@+id/attraction_image"
            app:layout_constraintTop_toBottomOf="@+id/attraction_image" />


    </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>
