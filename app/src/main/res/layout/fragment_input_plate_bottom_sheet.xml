<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="field"
            type="com.dubaiculture.data.repository.eservices.local.GetFieldValueItem" />
   <variable
            name="inputPlateBottomSheetViewModel"
            type="com.dubaiculture.ui.postLogin.eservices.viewmodels.EServiceBottomSheetViewModel" />

    </data>


<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_15sdp"
    android:layout_margin="@dimen/_5sdp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            android:src="@drawable/cross_icon_360_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.dubaiculture.ui.components.customtextview.CustomTextView
            android:id="@+id/heading"
            style="@style/TextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:fontFamily="@font/neosansarabic"
            android:text="@{field.english}"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintEnd_toStartOf="@+id/img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/img"
            app:textFont="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_26sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_26sdp"
            android:hint="@{field.fieldName}"
            app:hintTextColor="@color/purple_900"
            android:fontFamily="@font/neosansarabic"
            android:labelFor="@id/formInput"
            app:layout_constraintBottom_toTopOf="@+id/submit_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/heading">
            <!--            android:onTextChanged="@{classField::onTextChange}"-->
<!--            android:hint="@{field.english}"-->

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/formInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/neosansarabic"
                android:onTextChanged="@{inputPlateBottomSheetViewModel::onFieldChanged}"
                android:paddingStart="@dimen/_26sdp"
                android:text="@={inputPlateBottomSheetViewModel.field}" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.dubaiculture.ui.components.custombutton.CustomButton
            android:id="@+id/submit_text"
            android:layout_width="0dp"
            style="@style/ButtonStyle"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_26sdp"
            android:background="@drawable/btn_register"
            android:enabled="@{inputPlateBottomSheetViewModel.btnSubmitObserver}"
            android:gravity="center"
            android:onClick="@{()->inputPlateBottomSheetViewModel.postField()}"
            android:text="@string/confirm"
            android:textColor="@color/white_900"
            android:textSize="@dimen/_15ssp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout"
            app:layout_constraintStart_toStartOf="@+id/textInputLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>

</layout>
