<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.postLogin.attractions.detail.ar.detail.ARDetailFragment">

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:rotation="90"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.app.dubaiculture.ui.components.customtextview.CustomTextView
        android:id="@+id/detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ar_detail"
        android:transitionName="main_title"
        android:textColor="@color/black_200"
        android:layout_marginTop="@dimen/_45sdp"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintTop_toBottomOf="@+id/img_close"
        app:layout_constraintStart_toStartOf="@+id/img_close"
        android:layout_marginStart="@dimen/_10sdp"
        />
    <com.app.dubaiculture.ui.components.customtextview.CustomTextView
        android:id="@+id/tv_detail"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintStart_toStartOf="@+id/detail"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/detail"
        android:layout_marginEnd="@dimen/_20sdp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
