<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="procedure"
            type="com.app.dubaiculture.data.repository.popular_service.local.models.ServiceProcedure" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.github.vipulasri.timelineview.TimelineView
            android:id="@+id/timeline"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:endLineColor="@color/gray_600"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lineStyle="dash"
            app:lineStyleDashGap="3dp"
            app:lineStyleDashLength="@dimen/_4sdp"
            app:lineWidth="3dp"
            app:marker="@drawable/circle_sitemap"
            app:markerSize="@dimen/_22sdp"
            app:startLineColor="@color/gray_400" />

        <com.app.dubaiculture.ui.components.customtextview.CustomTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_10sdp"
            android:text="@{procedure.title}"
            android:textColor="?attr/colorSecondary"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintBottom_toBottomOf="@+id/timeline"
            app:layout_constraintStart_toEndOf="@+id/timeline"
            app:layout_constraintTop_toTopOf="@id/timeline" />
        <!--        android:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor. Aenean massa. Cum sociis natoque penatibus et magnis dis parturient montes"-->


        <com.app.dubaiculture.ui.components.customtextview.CustomTextView
            android:id="@+id/tv_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:paddingStart="@dimen/_10sdp"
            android:text="@{procedure.summary}"
            android:textColor="@color/gray_750"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/timeline"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <com.app.dubaiculture.ui.components.customtextview.CustomTextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/purple_900"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintBottom_toBottomOf="@+id/timeline"
            app:layout_constraintEnd_toEndOf="@+id/timeline"
            app:layout_constraintStart_toStartOf="@+id/timeline"
            app:layout_constraintTop_toTopOf="@+id/timeline" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
