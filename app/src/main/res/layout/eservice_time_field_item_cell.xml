<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>


        <variable
            name="field_class"
            type="com.dubaiculture.ui.postLogin.eservices.adapter.viewholders.TimeFieldViewHolder" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.dubaiculture.ui.components.custombutton.CustomButton
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:onClick="@{(v)->field_class.onDropDownClicked(v)}"
            android:drawableEnd="@drawable/ic_dropdown"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingEnd="@dimen/_20sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/btn_register"
            android:elevation="@dimen/_15sdp"
            android:foreground="@drawable/custom_ripple_border"
            android:gravity="center"
            android:text="Select Value"
            android:textAllCaps="false"
            android:textColor="@color/white_900"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>