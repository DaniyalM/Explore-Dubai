<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.preLogin.forgot.ForgotFragment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/top_design"
            app:layout_constraintTop_toTopOf="parent"
            />


        <ImageView
            android:id="@+id/img_close"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:rotation="90"
            android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.app.dubaiculture.ui.components.customtextview.CustomTextView
            android:id="@+id/registration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgot_password_"
            android:textColor="@color/black_200"
            android:layout_marginTop="@dimen/_45sdp"
            android:textSize="@dimen/_16ssp"
            app:layout_constraintTop_toBottomOf="@+id/img_close"
            app:layout_constraintStart_toStartOf="@+id/img_close"
            android:layout_marginStart="@dimen/_10sdp"
            />


        <com.app.dubaiculture.ui.components.customtextview.CustomTextView
            android:id="@+id/email_address"
            android:layout_marginTop="@dimen/_30sdp"
            style="@style/TextViewRegistrationStyle"
            android:text="@string/full_name"
            app:layout_constraintTop_toBottomOf="@+id/registration"
            app:layout_constraintStart_toStartOf="@+id/registration"
            />

        <com.app.dubaiculture.ui.components.customEditText.CustomEditText
            android:id="@+id/edit_email"
            style="@style/EditTextStyle"
            android:imeOptions="actionDone"
            android:hint="@string/email_address"
            android:drawableEnd="@drawable/message_register"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email_address" />

        <com.app.dubaiculture.ui.components.customtextview.CustomTextView
            android:textColor="@color/gray_800"
            android:textSize="@dimen/_11ssp"
            app:textFont="bold"
           android:text="A One Time Password (OTP) will be sent to your\nregistered email address or mobile number."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/edit_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_otp"
            android:layout_marginBottom="@dimen/_60sdp"
            android:background="@drawable/btn_register"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAllCaps="false"
            android:text="@string/send_otp"
            android:layout_marginTop="@dimen/_25sdp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.app.dubaiculture.ui.components.customtextview.CustomTextView
            android:id="@+id/tv_cancel"
            android:text="@string/cancel"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/black_200"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintStart_toStartOf="@+id/btn_otp"
            app:layout_constraintEnd_toEndOf="@id/btn_otp"
            app:layout_constraintTop_toBottomOf="@+id/btn_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
