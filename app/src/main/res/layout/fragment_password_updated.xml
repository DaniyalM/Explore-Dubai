<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.preLogin.login.bottomsheet.PasswordUpdatedFragment">

    <ImageView
        android:id="@+id/gray_line"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/gray_line"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="wrap_content"/>

    <com.app.dubaiculture.ui.components.customtextview.CustomTextView
       android:id="@+id/pass_updated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_200"
        android:textSize="@dimen/_17ssp"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="@string/password_updated"
        app:layout_constraintTop_toBottomOf="@+id/gray_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <com.app.dubaiculture.ui.components.customtextview.CustomTextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:textAlignment="center"
        android:textColor="@color/gray_800"
        android:textSize="@dimen/_11ssp"
        android:text="Your password has been updated.\nContinue to login"
        app:layout_constraintTop_toBottomOf="@+id/pass_updated"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <include
        android:visibility="gone"
        layout="@layout/button_layout"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view"
        />
    <com.app.dubaiculture.ui.components.customtextview.CustomTextView
        android:id="@+id/btn_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white_900"
        android:text="@string/continue_"
        android:gravity="center"
        android:background="@drawable/btn_register"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view"
        />


    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/_25sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_continue"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
    </layout>
