<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <merge>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">



        <TextView
            android:id="@+id/heading"
            android:text="Museum"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/purple_900"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <com.app.dubaiculture.ui.components.customtextview.CustomTextView
            android:id="@+id/sub_heading"
            style="@style/TextViewRegistrationStyle"
            android:textSize="@dimen/_18ssp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textStyle="bold"
            android:textColor="@color/black_700"
            android:text="Museum of the Poet\nAl Oqaili"
            app:layout_constraintStart_toStartOf="@+id/heading"
            app:layout_constraintTop_toBottomOf="@+id/heading" />


        <ImageView
            android:id="@+id/img_ar"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cards_bg"
            android:elevation="@dimen/_5sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sub_heading" />


        <ImageView
            android:id="@+id/img_360"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cards_bg_new"
            android:elevation="@dimen/_5sdp"
            android:layout_marginEnd="-20dp"
            app:layout_constraintBottom_toBottomOf="@+id/img_ar"
            app:layout_constraintStart_toEndOf="@+id/img_ar"
            app:layout_constraintTop_toTopOf="@+id/img_ar" />

        <ImageView
            android:id="@+id/img_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cards_bg"
            android:elevation="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="@+id/img_360"
            app:layout_constraintStart_toEndOf="@+id/img_360"
            app:layout_constraintTop_toTopOf="@+id/img_360" />


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/ar"
            android:translationZ="@dimen/_50sdp"
            app:layout_constraintEnd_toEndOf="@+id/img_ar"
            app:layout_constraintStart_toStartOf="@+id/img_ar"
            app:layout_constraintTop_toTopOf="@+id/img_ar" />

        <com.app.dubaiculture.ui.components.customtextview.CustomTextView
            android:id="@+id/customTextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="@string/augmented_reality"
            android:textColor="@color/purple_600"
            android:textSize="@dimen/_9sdp"
            android:translationZ="@dimen/_50sdp"
            app:layout_constraintEnd_toEndOf="@+id/img_ar"
            app:layout_constraintStart_toStartOf="@+id/img_ar"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />










        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/three_six_zero"
            android:translationZ="@dimen/_50sdp"
            app:layout_constraintEnd_toEndOf="@+id/img_360"
            app:layout_constraintStart_toStartOf="@+id/img_360"
            app:layout_constraintTop_toTopOf="@+id/img_360" />

        <com.app.dubaiculture.ui.components.customtextview.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_360_view"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/purple_600"
            android:textSize="@dimen/_9sdp"
            android:translationZ="@dimen/_50sdp"
            app:layout_constraintEnd_toEndOf="@+id/img_360"
            app:layout_constraintStart_toStartOf="@+id/img_360"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />





        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/gallery_"
            android:translationZ="@dimen/_50sdp"
            app:layout_constraintEnd_toEndOf="@+id/img_gallery"
            app:layout_constraintStart_toStartOf="@+id/img_gallery"
            app:layout_constraintTop_toTopOf="@+id/img_gallery" />

        <com.app.dubaiculture.ui.components.customtextview.CustomTextView
            android:id="@+id/customTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="@string/gallery"
            android:textColor="@color/purple_600"
            android:textSize="@dimen/_9sdp"
            android:translationZ="@dimen/_50sdp"
            app:layout_constraintEnd_toEndOf="@+id/img_gallery"
            app:layout_constraintStart_toStartOf="@+id/img_gallery"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" />


        <com.app.dubaiculture.ui.components.customtextview.CustomTextView
            android:id="@+id/tv_attraction_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sunday-Friday"
            android:drawablePadding="@dimen/_10sdp"
            android:drawableStart="@drawable/clock_purple"
            app:layout_constraintStart_toStartOf="@+id/sub_heading"
            app:layout_constraintTop_toBottomOf="@+id/img_ar" />

        <com.app.dubaiculture.ui.components.customtextview.CustomTextView
            android:id="@+id/tv_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_10sdp"
            android:text="10:00 Am - 1:00 Pm"
            app:layout_constraintHorizontal_bias="0.12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/sub_heading"
            app:layout_constraintTop_toBottomOf="@+id/tv_attraction_days" />


        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="0.2dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/gray_600"
            android:layout_marginEnd="@dimen/_20sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_attraction_days"
            app:layout_constraintTop_toBottomOf="@+id/tv_times" />



        <com.app.dubaiculture.ui.components.customtextview.CustomTextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="Palm Jumeriah, Dubai"
            android:drawablePadding="@dimen/_10sdp"
            android:drawableStart="@drawable/location_fiilter"
            app:layout_constraintStart_toStartOf="@+id/sub_heading"
            app:layout_constraintTop_toBottomOf="@+id/divider" />

        <com.app.dubaiculture.ui.components.customtextview.CustomTextView
            android:id="@+id/tv_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/right_arrow"
            android:drawablePadding="@dimen/_2sdp"
            android:text="@string/get_directions"
            app:layout_constraintEnd_toStartOf="@+id/tv_km"
            app:layout_constraintHorizontal_bias="0.17"
            app:layout_constraintStart_toStartOf="@+id/sub_heading"
            app:layout_constraintTop_toBottomOf="@+id/tv_location" />


        <com.app.dubaiculture.ui.components.customtextview.CustomTextView
            android:id="@+id/tv_km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_2sdp"
            android:text="10 Km Away"
            app:layout_constraintBottom_toBottomOf="@+id/tv_direction"
            app:layout_constraintEnd_toEndOf="@+id/divider"
            app:layout_constraintHorizontal_bias="0.8"
            app:layout_constraintTop_toBottomOf="@+id/tv_location" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_map"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/_18sdp"
            app:cardCornerRadius="@dimen/_12sdp"
            app:cardBackgroundColor="@color/gray_600"
            android:elevation="@dimen/_10sdp"
            android:layout_height="@dimen/_140sdp"
            app:layout_constraintEnd_toEndOf="@+id/tv_km"
            app:layout_constraintStart_toStartOf="@+id/tv_location"
            app:layout_constraintTop_toBottomOf="@+id/tv_direction">

            <fragment
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:id="@+id/map" />
        </androidx.cardview.widget.CardView>

        <com.app.dubaiculture.ui.components.customtextview.CustomTextView
            android:id="@+id/heading_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_200"
            android:textSize="@dimen/_18ssp"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:text="@string/description"
            app:layout_constraintTop_toBottomOf="@+id/card_map"
            app:layout_constraintStart_toStartOf="parent"
            />

        <com.app.dubaiculture.ui.components.customreadmore.CustomReadMoreView
            android:id="@+id/tv_desc_readmore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:textSize="@dimen/_9ssp"
            app:trimLines="3"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa."
            app:trimMode="trimModeLine"
            app:colorClickableText="@color/gray_600"
            android:layout_marginTop="@dimen/_10sdp"
            app:trimCollapsedText="@string/read_more"
            app:trimExpandedText="@string/read_less"
            app:layout_constraintEnd_toEndOf="@+id/card_map"
            app:layout_constraintStart_toStartOf="@+id/heading_desc"
            app:layout_constraintTop_toBottomOf="@+id/heading_desc" />

        <com.app.dubaiculture.ui.components.custombutton.CustomButton
            android:id="@+id/btn_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:background="@drawable/btn_register"
            android:foreground="@drawable/custom_ripple_border"
            android:gravity="center"
            android:text="@string/book_a_ticket"
            android:textAllCaps="false"
            android:elevation="@dimen/_15sdp"
            android:textColor="@color/white_900"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_desc_readmore" />





        <com.app.dubaiculture.ui.components.customtextview.CustomTextView
            android:id="@+id/view_site_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_site_map"
            android:layout_marginTop="@dimen/_20sdp"
            android:drawablePadding="@dimen/_10sdp"
            android:drawableStart="@drawable/clock_purple"
            app:layout_constraintStart_toStartOf="@+id/sub_heading"
            app:layout_constraintTop_toBottomOf="@+id/btn_filter" />

        <com.app.dubaiculture.ui.components.customtextview.CustomTextView
            android:id="@+id/dont_miss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_10sdp"
            android:text="@string/don_t_miss_out_on_any_details"
            app:layout_constraintHorizontal_bias="0.12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/sub_heading"
            app:layout_constraintTop_toBottomOf="@+id/view_site_map" />


        <View
            android:id="@+id/divider2"
            android:layout_width="0dp"
            android:layout_height="0.2dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/gray_600"
            android:layout_marginEnd="@dimen/_20sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_attraction_days"
            app:layout_constraintTop_toBottomOf="@+id/dont_miss" />










        <com.app.dubaiculture.ui.components.customtextview.CustomTextView
            android:id="@+id/ibeacons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ibeacons"
            android:layout_marginTop="@dimen/_20sdp"
            android:drawablePadding="@dimen/_10sdp"
            android:drawableStart="@drawable/clock_purple"
            app:layout_constraintStart_toStartOf="@+id/sub_heading"
            app:layout_constraintTop_toBottomOf="@+id/divider2" />

        <com.app.dubaiculture.ui.components.customtextview.CustomTextView
            android:id="@+id/ibeacons_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_10sdp"
            android:text="Lorem ipsum dolar sit amet"
            app:layout_constraintHorizontal_bias="0.12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/sub_heading"
            app:layout_constraintTop_toBottomOf="@+id/ibeacons" />


        <View
            android:id="@+id/divider3"
            android:layout_width="0dp"
            android:layout_height="0.2dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/gray_600"
            android:layout_marginEnd="@dimen/_20sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_attraction_days"
            app:layout_constraintTop_toBottomOf="@+id/ibeacons_desc" />



        <com.app.dubaiculture.ui.components.customtextview.CustomTextView
            android:id="@+id/heading_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_200"
            android:textSize="@dimen/_13ssp"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:text="@string/contact_for_inquiries"
            app:layout_constraintTop_toBottomOf="@+id/divider3"
            app:layout_constraintStart_toStartOf="parent"
            />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_contact"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="@+id/heading_contact"
            app:layout_constraintTop_toBottomOf="@+id/heading_contact">

            <com.app.dubaiculture.ui.components.customtextview.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/mail_icon"
                android:drawablePadding="@dimen/_5sdp"
                android:text="@string/email_us"
                android:textColor="@color/purple_900"
                android:textSize="@dimen/_9ssp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_contact"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/heading_contact"
            app:layout_constraintTop_toBottomOf="@+id/heading_contact">

            <com.app.dubaiculture.ui.components.customtextview.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/mail_icon"
                android:drawablePadding="@dimen/_5sdp"
                android:text="@string/email_us"
                android:textColor="@color/purple_900"
                android:textSize="@dimen/_9ssp" />
        </LinearLayout>



        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardview_plan_trip"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:cardElevation="@dimen/_10sdp"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_weight="0.8"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">


                    <com.app.dubaiculture.ui.components.customtextview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_16sdp"
                        android:textColor="@color/black_200"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:text="@string/plan_your_trip" />
                    <com.app.dubaiculture.ui.components.customtextview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:textSize="@dimen/_12ssp"
                        android:text="@string/create_your_customised_trip"
                        />
                </LinearLayout>

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_weight="0.2"
                    android:id="@+id/animationView"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_70sdp"

                    android:layout_height="match_parent"
                    app:lottie_rawRes="@raw/pinlooped"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"/>
                <!--                <ImageView-->
                <!--                    android:background="@drawable/dc_location_icon"-->
                <!--                    android:layout_gravity="center_vertical"-->
                <!--                    android:layout_margin="@dimen/_10sdp"-->
                <!--                    android:layout_width="@dimen/_30sdp"-->
                <!--                    android:layout_height="@dimen/_40sdp"/>-->

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


        <com.app.dubaiculture.ui.components.customtextview.CustomTextView
            android:id="@+id/heading_stay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_200"
            android:textSize="@dimen/_13ssp"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:text="@string/stay_updated"
            app:layout_constraintTop_toBottomOf="@+id/cardview_plan_trip"
            app:layout_constraintStart_toStartOf="parent"
            />



        <LinearLayout
            android:id="@+id/ll_social"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/heading_stay"
            app:layout_constraintStart_toStartOf="@id/heading_stay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/twitter_icon"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/twitter_icon"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/twitter_icon"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/twitter_icon"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/twitter_icon"
                />
        </LinearLayout>



        <com.app.dubaiculture.ui.components.customtextview.CustomTextView
            android:id="@+id/heading_up_coming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_200"
            android:textSize="@dimen/_13ssp"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:text="@string/what_s_happenings_at_majlis_ghorfat"
            app:layout_constraintTop_toBottomOf="@+id/ll_social"
            app:layout_constraintStart_toStartOf="parent"
            />

<!--        android:layout_marginStart="@dimen/_15sdp"-->
<!--        android:layout_marginEnd="@dimen/_15sdp"-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_up_coming"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_335sdp"
            android:columnCount="1"
            app:layout_constraintVertical_bias="0.1"
            android:layout_marginTop="@dimen/_14sdp"

            android:layout_marginBottom="@dimen/_30sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/heading_up_coming"
            tools:listitem="@layout/attraction_detail_up_coming_items" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    </merge>

</layout>
