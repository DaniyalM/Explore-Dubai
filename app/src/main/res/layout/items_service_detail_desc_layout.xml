<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="description"
            type="com.app.dubaiculture.data.repository.popular_service.local.models.Description" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.app.dubaiculture.ui.components.customtextview.CustomTextView
            android:id="@+id/tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="Museum"
            android:textAllCaps="true"
            android:textColor="@color/purple_900"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:textFont="bold" />

        <ImageView
            android:id="@+id/img_speaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/speakers"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.app.dubaiculture.ui.components.customtextview.CustomTextView
            android:id="@+id/tv_title"
            style="@style/TextViewRegistrationStyle"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginEnd="@dimen/_22sdp"
            android:text="Museums Guided Tour \nBooking Request"
            android:textAlignment="viewStart"
            android:textColor="@color/black_700"
            android:textSize="@dimen/_19ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_category"
            app:layout_constraintTop_toBottomOf="@+id/tv_category"
            app:textFont="bold" />

        <com.app.dubaiculture.ui.components.customtextview.CustomTextView
            android:id="@+id/classification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/classification"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintStart_toStartOf="@+id/tv_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <com.app.dubaiculture.ui.components.customtextview.CustomTextView
            android:id="@+id/supplymentary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/supplementary"
            android:textColor="@color/black_200"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintStart_toStartOf="@+id/classification"
            app:layout_constraintTop_toBottomOf="@+id/classification" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <View
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@color/gray_750"
            app:layout_constraintEnd_toEndOf="@+id/guideline_vertical"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />


        <com.app.dubaiculture.ui.components.customtextview.CustomTextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/type"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintStart_toStartOf="@+id/guideline_vertical"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <com.app.dubaiculture.ui.components.customtextview.CustomTextView
            android:id="@+id/procedure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/procedure"
            android:textColor="@color/black_200"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintStart_toStartOf="@+id/type"
            app:layout_constraintTop_toBottomOf="@+id/type" />


        <View
            android:id="@+id/divier_hori_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:background="@color/gray_750"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/classification"
            app:layout_constraintTop_toBottomOf="@+id/divider" />


        <com.app.dubaiculture.ui.components.customtextview.CustomTextView
            android:id="@+id/service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/service_channels"
            android:textColor="@color/gray_750"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintStart_toStartOf="@+id/supplymentary"
            app:layout_constraintTop_toBottomOf="@+id/divier_hori_line" />

        <com.app.dubaiculture.ui.components.customtextview.CustomTextView
            android:id="@+id/mobile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawableStart="@drawable/mob_icon"
            android:drawablePadding="@dimen/_8sdp"
            android:text="@string/mobile"
            android:textColor="@color/black_200"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintStart_toStartOf="@+id/service"
            app:layout_constraintTop_toBottomOf="@+id/service"
            app:layout_constraintWidth_percent="0.29" />


        <com.app.dubaiculture.ui.components.customtextview.CustomTextView
            android:id="@+id/pin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawableStart="@drawable/pin_icon"
            android:drawablePadding="@dimen/_8sdp"
            android:text="@string/location"
            android:textColor="@color/black_200"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintStart_toEndOf="@+id/mobile"
            app:layout_constraintTop_toBottomOf="@+id/service"
            app:layout_constraintWidth_percent="0.29" />


        <com.app.dubaiculture.ui.components.customtextview.CustomTextView
            android:id="@+id/website"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawableStart="@drawable/mob_icon"
            android:drawablePadding="@dimen/_8sdp"
            android:text="@string/website"
            android:textColor="@color/black_200"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintStart_toEndOf="@+id/pin"
            app:layout_constraintTop_toBottomOf="@+id/service"
            app:layout_constraintWidth_percent="0.29" />

        <include
            android:id="@+id/common_btn"
            layout="@layout/btn_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/mobile" />


        <com.app.dubaiculture.ui.components.customtextview.CustomTextView
            android:id="@+id/heading_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="@string/description"
            android:textColor="@color/black_200"
            android:textSize="@dimen/_18ssp"
            app:layout_constraintStart_toStartOf="@id/tv_category"
            app:layout_constraintTop_toBottomOf="@+id/common_btn" />


        <com.app.dubaiculture.ui.components.customreadmore.CustomReadMoreView
            android:id="@+id/tv_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:lineSpacingExtra="3dp"
            android:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor. Aenean massa. Cum sociis natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus. Donec quam felis, ultricies nec, pellentesque eu, pretium quis, sem. Nulla consequat massa quis enim. Donec pede justo, fringilla vel, aliquet nec, vulputate eget, arcu. In enim justo, rhoncus ut, imperdiet a, venenatis vitae, justo. Nullam dictum felis eu pede mollis pretium. Integer tincidunt. Cras dapibus. Vivamus elementum semper nisi. Aenean vulputate eleifend tellus. Aenean leo ligula, porttitor eu, consequat vitae, eleifend ac, enim"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_category"
            app:layout_constraintTop_toBottomOf="@id/heading_desc"
            app:trimCollapsedText="@string/read_more"
            app:trimExpandedText="@string/read_less"
            app:trimLength="150"
            app:trimMode="trimModeLength" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:cardBackgroundColor="@color/gray_600"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_8sdp"
            app:layout_constraintEnd_toEndOf="@id/tv_desc"
            app:layout_constraintStart_toStartOf="@+id/tv_desc"
            app:layout_constraintTop_toBottomOf="@+id/tv_desc">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/pdf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:background="@drawable/pdf_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.app.dubaiculture.ui.components.customtextview.CustomTextView
                    android:id="@+id/tv_pdf_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Please Download Museum guideline"
                    android:textColor="@color/purple_900"
                    android:textSize="@dimen/_11ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.15"
                    app:layout_constraintStart_toEndOf="@+id/pdf"
                    app:layout_constraintTop_toTopOf="@+id/pdf" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/download_icon"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_pdf_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_pdf_title" />

                <com.app.dubaiculture.ui.components.customtextview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12kb"
                    android:textSize="@dimen/_9ssp"
                    app:layout_constraintStart_toStartOf="@+id/tv_pdf_title"
                    app:layout_constraintTop_toBottomOf="@+id/tv_pdf_title" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>