<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.postLogin.latestnews.detail.NewsDetailFragment">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_close"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:rotation="90"
            android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.core.widget.NestedScrollView
            android:layout_marginTop="@dimen/_60sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl"
                app:layout_constraintTop_toBottomOf="@+id/img_close"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="0dp">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvSlider"
                    tools:itemCount="1"
                    tools:listitem="@layout/item_slider"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <me.relex.circleindicator.CircleIndicator2
                    android:id="@+id/indicator"
                    android:layout_width="wrap_content"
                    app:ci_drawable="@drawable/purple_indicator"
                    android:layout_height="@dimen/_20sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rvSlider" />

                <com.app.dubaiculture.ui.components.customtextview.CustomTextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/calender"
                    android:text="14 Nov, 2020"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_10ssp"
                    style="@style/TextViewStyle"
                    android:drawablePadding="@dimen/_10sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/_15sdp"
                    app:layout_constraintTop_toBottomOf="@+id/indicator"
                    />


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_speaker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:foreground="@drawable/custom_ripple_border"
                    android:background="@drawable/speakers"
                    android:src="@drawable/speakers"
                    app:layout_constraintBottom_toBottomOf="@+id/tvDate"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvDate" />

                <com.app.dubaiculture.ui.components.customtextview.CustomTextView
                    android:id="@+id/tv_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="@dimen/_20ssp"
                    android:layout_marginTop="@dimen/_12sdp"
                    app:textFont="bold"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/img_speaker"
                    app:layout_constraintStart_toStartOf="@+id/tvDate"
                    app:layout_constraintTop_toBottomOf="@+id/tvDate" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_news_article"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:itemCount="1"
                    tools:listitem="@layout/item_category_filter"
                    app:layout_constraintTop_toBottomOf="@+id/tv_title"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintStart_toStartOf="@+id/tv_title"
                    />

                <View
                    android:id="@+id/divider"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="#EDEDED"
                    app:layout_constraintEnd_toEndOf="@id/img_speaker"
                    app:layout_constraintTop_toBottomOf="@+id/rv_news_article"
                    android:layout_marginTop="@dimen/_25sdp"
                    app:layout_constraintStart_toStartOf="@+id/rv_news_article"
                    />


                <com.app.dubaiculture.ui.components.customtextview.CustomTextView
                    android:id="@+id/tv_desc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/divider"
                    app:layout_constraintStart_toStartOf="@id/divider"
                    app:layout_constraintEnd_toEndOf="@id/divider"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:textColor="@color/gray_750"
                    android:text="Hala Badri, Director General of Dubai Culture and Arts Authority, affirmed that the Authority is progressively fulfilling its role with a steadfast vision by constantly communicating with the creative community and working with its partners to ensure the continuity of creativity in various fields across the cultural sector and enable creatives to stay their course despite the repercussions caused by the COVID-19 pandemic. This came as part of her visit to AlSerkal Avenue, which is one of the most prominent creative incubators for cultural events in Dubai. It was also part of the continuous support of HH Sheikha Latifa bint Mohammed bin Rashid Al Maktoum, chairperson of Dubai Culture, to follow up on the cultural scene in the emirate based on Her Highness’s keenness to constantly be conscious of the business conditions in the sector. Her Highness also seeks to find solutions that would ensure the continuity of the sector and enhance the ability of all creatives within it to rise up to the challenges and pursue the emirate’s procedural path of development and prosperity."
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    app:layout_constraintEnd_toEndOf="@+id/tv_desc"
                    app:layout_constraintStart_toStartOf="@+id/tv_desc"
                    app:layout_constraintTop_toBottomOf="@+id/tv_desc" />


                <LinearLayout
                    android:id="@+id/ll_desc_bg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/news_detail_bg_icon"
                    android:orientation="vertical"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_desc">
                    <com.app.dubaiculture.ui.components.customtextview.CustomTextView
                        android:id="@+id/tv_title_bg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginTop="@dimen/_35sdp"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:textColor="@color/sea_green"
                        app:textAllCaps="true"
                        android:text="Hala Belcon said that :"

                        />

                    <com.app.dubaiculture.ui.components.customtextview.CustomTextView
                        android:id="@+id/tv_desc_bg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_35sdp"
                        android:textColor="@color/gray_750"
                        android:text="Hala Badri, Director General of Dubai Culture and Arts Authority, affirmed that the Authority is progressively fulfilling its role with a steadfast vision by constantly communicating with the creative community and working with its partners to ensure the continuity of creativity in various fields across the cultural sector and enable creatives to stay their course despite the repercussions caused by the COVID-19 pandemic. This came as part of her visit to AlSerkal Avenue, which is one of the most prominent creative incubators for cultural events in Dubai. It was also part of the continuous support of HH Sheikha Latifa bint Mohammed bin Rashid Al Maktoum, chairperson of Dubai Culture, to follow up on the cultural scene in the emirate based on Her Highness’s keenness to constantly be conscious of the business conditions in the sector. Her Highness also seeks to find solutions that would ensure the continuity of the sector and enhance the ability of all creatives within it to rise up to the challenges and pursue the emirate’s procedural path of development and prosperity."

                        />

                </LinearLayout>

                <com.app.dubaiculture.ui.components.customtextview.CustomTextView
                    android:id="@+id/tv_more_title_detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/ll_desc_bg"
                    app:layout_constraintStart_toStartOf="@id/divider"
                    app:layout_constraintEnd_toEndOf="@id/divider"
                    android:textSize="@dimen/_18ssp"
                    android:layout_marginTop="@dimen/_12sdp"
                    style="@style/TextViewStyle"
                    android:text="Motivation"
                    />

                <com.app.dubaiculture.ui.components.customtextview.CustomTextView
                    android:id="@+id/tv_more_detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_more_title_detail"
                    app:layout_constraintStart_toStartOf="@id/divider"
                    app:layout_constraintEnd_toEndOf="@id/divider"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="@color/gray_750"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s"
                    />


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_curve"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_events_two"
                    android:scaleX="-1"
                    app:layout_constraintTop_toBottomOf="@+id/tv_more_detail" />


                <LinearLayout
                    android:id="@+id/llMoreNews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray_400"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/img_curve">

                    <com.app.dubaiculture.ui.components.customtextview.CustomTextView
                        android:id="@+id/heading_up_coming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:text="@string/more_news"
                        style="@style/TextViewStyle"
                        android:textSize="@dimen/_18ssp"
                        app:layout_constraintStart_toStartOf="parent" />

                    <!--        android:layout_marginStart="@dimen/_15sdp"-->
                    <!--        android:layout_marginEnd="@dimen/_15sdp"-->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_more_news"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:itemCount="1"
                        tools:listitem="@layout/latest_news_inner_item_cell"
                        app:layout_constraintTop_toBottomOf="@+id/heading_up_coming" />
                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
