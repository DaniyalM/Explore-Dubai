<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_12sdp"
        app:cardElevation="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/_7sdp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/_80sdp"
            android:textAlignment="center"
            android:layout_height="@dimen/_50sdp">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/selectorViewChanger"/>

            <ImageView
                android:id="@+id/ll_bg"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/museums_icon_home"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgInnerIcon"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/museums_icon_home"
                app:layout_constraintBottom_toBottomOf="@+id/ll_bg"
                app:layout_constraintEnd_toEndOf="@+id/ll_bg"
                app:layout_constraintStart_toStartOf="@id/ll_bg"
                app:layout_constraintTop_toTopOf="@id/ll_bg" />


            <com.app.dubaiculture.ui.components.customtextview.CustomTextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Sub Title"
                android:textSize="@dimen/_9ssp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/ll_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/ll_bg"
                app:layout_constraintTop_toTopOf="@+id/ll_bg"
                app:layout_constraintVertical_bias="0.478"
                app:textFont="bold" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

   </layout>
